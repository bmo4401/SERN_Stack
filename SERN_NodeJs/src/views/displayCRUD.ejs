<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>GET CRUD</title>
        <!-- Bootstrap 4 -->
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />

        <!-- jQuery library -->
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

        <!-- Popper JS -->
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Mail</th>
                    <th scope="col">Address</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.map(x =>{ %>
                <tr>
                    <th scope="row"><%= x.id%></th>
                    <td><%= x.firstname%></td>
                    <td><%= x.lastname%></td>
                    <td><%= x.email%></td>
                    <td><%= x.address%></td>
                    <td><%= x.phonenumber%></td>
                    <td></td>
                    <td>
                        <a href="/edit-crud?id=<%=x.id%>" type="button" class="btn btn-outline-secondary">Edit</a>
                        <a href="/delete-crud?id=<%=x.id%>" type="button" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <div class="create-btn d-flex justify-content-center">
            <a href="/create-crud" type="button" class="btn btn-success">Create</a>
        </div>
    </body>
</html>
