<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Edit user infor</title>
        <!-- Bootstrap 4 -->
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />

        <!-- jQuery library -->
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

        <!-- Popper JS -->
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Mail</th>
                    <th scope="col">Address</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <%let arr = []; arr.push(userData)%> <% arr.map(x =>{ %>
                <form action="/put-crud" method="POST">
                    <tr>
                        <th scope="row"><%= x.id%></th>
                        <td><input style="width: 100%" name="firstname" value="<%= x.firstname%>" /></td>
                        <td><input style="width: 100%" name="lastname" value="<%= x.lastname%>" /></td>
                        <td><%= x.email%></td>
                        <td><input style="width: 100%" name="address" value="<%= x.address%>" /></td>
                        <td><input style="width: 100%" name="phonenumber" value="<%= x.phonenumber%>" /></td>
                        <td>
                            <button type="submit" class="btn btn-outline-secondary">Update</button>
                        </td>
                        <td><input style="width: 100%; display: none" name="id" value="<%= x.id%>" /></td>
                    </tr>
                    <% }) %>
                </form>
            </tbody>
        </table>
    </body>
</html>
